<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student" class="com.guo.pojo.Student">
        <!-- 第一中国，普通值得注入  -->
        <property name="name" value="Coder Guo" />
        <!-- 第二种，使用bean注入 -->
        <property name="address" ref="address" />

        <!-- 3.数组注入 -->
        <property name="books">
            <array>
                <value>红楼梦</value>
                <value>西游记</value>
                <value>水浒传</value>
                <value>三国演义</value>
                <value>java核心思想</value>
            </array>
        </property>
        <!--4.list-->
        <property name="hobbies">
            <list>
                <value>游泳</value>
                <value>唱歌</value>
                <value>听音乐</value>
                <value>打游戏</value>
            </list>
        </property>

        <!--5.map注入-->
        <property name="card">
            <map>
                <entry key="身份证" value="3131231231231231231231313" />
                <entry key="银行卡" value="2131231231231221354356476568758" />
            </map>
        </property>

        <!--6.Set注入-->
        <property name="games">
            <set>
                <value>LOL</value>
                <value>WOW</value>
                <value>CF</value>
                <value>DNF</value>
            </set>
        </property>

        <!--7.null值注入-->
        <property name="wife">
            <null />
        </property>

        <property name="info">
            <props>
                <prop key="userName">CoderGuo</prop>
                <prop key="pwd">21389012</prop>
            </props>
        </property>
    </bean>

    <bean id="address" class="com.guo.pojo.Address" />

</beans>